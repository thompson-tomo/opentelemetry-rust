// http://cspell.org/configuration/
{
    "version": "0.2",
    "language": "en,en-US",
    "useGitignore": true,
    "minWordLength": 4,
    "import": ["https://cdn.jsdelivr.net/npm/@cspell/dict-people-names/cspell-ext.json"],
    "ignorePaths": [
        "target/**",
        "**.j2",
        "**.json",
        "**.proto",
        "**.rs",
        "**.toml",
        "**.txt",
        "**.yaml"
    ],    
    "patterns" :[
        {
            "name": "CodeBlock",
            "pattern": "/^(\\s*[~`]{3,}).*?[\\s\\S]*?\\1/igmx"
        },
        {
            "name": "CodeName",
            "pattern": "/([~`])[^~`]*?\\1/x"
        }
    ],
    // list of words to be ignored.  unlike `words` below, these won't be
    // suggested as corrections for misspelled words.
    "ignoreWords": [
        "otel",
        "rustdoc",
        "rustfilt",
        "webkpi"
    ],
    // these are words that are always considered incorrect.
    "flagWords": [
        "recieve",
        "reciever",
        "seperate",
        "hte",
        "teh"
    ],
    "dictionaries": [
        "companies",
        "people-names",
        "rust",
        "rust-crates",
        "software-tools",
        "softwareTerms"
    ],
    // these are words that are always correct and can be thought of as our
    // workspace dictionary.
    "words": [
        "logrecord",
        "periodicreader",

        // software terms
        "appender",
        "appenders",
        "BLRP",
        "cloneable",
        "quantiles",
        "UCUM"
    ],
    "enabledLanguageIds": [
        "jsonc",
        "markdown",
        "plaintext",
        "rust",
        "shellscript"
    ],
    "languageSettings": [
        {
            "languageId": "jsonc",
            "includeRegExpList": [
                "CStyleComment"
            ]
        },
        {
            "languageId": "markdown",
            "caseSensitive": false,
            "ignoreRegExpList": [
                "CodeBlock",
                "CodeName"
            ]
        },
        {
            "languageId": "rust",
            "includeRegExpList": [
                "CStyleComment",
                "strings"
            ]
        },
        {
            "languageId": "shellscript",
            "includeRegExpList": [
                "/#.*/g"
            ]
        }
    ]
}
