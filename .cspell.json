// http://cspell.org/configuration/
{
    "version": "0.2",
    "language": "en,en-US",
    "useGitignore": true,
    "minWordLength": 4,
    "import": ["https://cdn.jsdelivr.net/npm/@cspell/dict-people-names/cspell-ext.json"],
    "ignorePaths": [
        "opentelemetry-semantic-conventions/**",
        "target/**"
    ],    
    "patterns" :[
        {
            "name": "CodeBlock",
            "pattern": "/^(\\s*[~`]{3,}).*?[\\s\\S]*?\\1/igmx"
        },
        {
            "name": "CodeName",
            "pattern": "/([~`])[^~`]*?\\1/gmx"
        }
    ],
    // list of words to be ignored.  unlike `words` below, these won't be
    // suggested as corrections for misspelled words.
    "ignoreWords": [
        "meterbar",
        "meterfoo",
        "newtype",
        "otel",
        "rustdoc",
        "rustfilt",
        "testmeter",
        "tymethod",
        "webkpi"
    ],
    // these are words that are always considered incorrect.
    "flagWords": [
        "recieve",
        "reciever",
        "seperate",
        "hte",
        "teh"
    ],
    "dictionaries": [
        "companies",
        "people-names",
        "rust",
        "rust-crates",
        "k8s",
        "networking-terms",
        "software-tools",
        "softwareTerms"
    ],
    // these are words that are always correct and can be thought of as our
    // workspace dictionary.
    "words": [
        "BLRP",
        "logrecord",
        "periodicreader",

        "semconv",
        "parentid",
        "spanid",
        "spanname",
        "traceid",
        "cicd",
        "traceparent",
        "tracerprovider",
        "mykey",
        "myvalue",
        "myunit",
        "kvlist",
        "eventname",
        "anyvalue",
        "nocapture",
        "deque",
        "roundtripping",
        "tracez",
        "zpages",

        // software terms
        "appender", //
        "appenders", //
        "cloneable", //
        "quantiles", //
        "UCUM", //

        "retryable",
        "rustc",
        "pprof",
        "testcontainers",
        "bitmask",
        "noops",
        "parseable",
        "preconfigured"
    ],
    "enabledLanguageIds": [
        "json",
        "jsonc",
        "markdown",
        "plaintext",
        "rust",
        "shellscript",
        "toml",
        "yaml"
    ],
    "languageSettings": [
        {
            "languageId": "json, jsonc",
            "includeRegExpList": [
                "CStyleComment"
            ]
        },
        {
            "languageId": "markdown",
            "caseSensitive": false,
            "ignoreRegExpList": [
                "CodeBlock",
                "CodeName"
            ]
        },
        {
            "languageId": "rust",
            "includeRegExpList": [
                "CStyleComment",
                "strings"
            ],
            "ignoreRegExpList": [
                "CodeName"
            ]
        },
        {
            "languageId": "shellscript, toml, yaml",
            "includeRegExpList": [
                "/#.*/g"
            ]
        }
    ]
}
