// http://cspell.org/configuration/
{
    "version": "0.2",
    "language": "en,en-US",
    "useGitignore": true,
    "minWordLength": 4,
    "ignorePaths": [
        "target/**",
        "**.j2",
        "**.json",
        "**.proto",
        "**.rs",
        "**.toml",
        "**.txt",
        "**.yaml"
    ],    
    "patterns" :[
        {
            "name": "CodeBlock",
            "pattern": "/^(\\s*[~`]{3,}).*?[\\s\\S]*?\\1/igmx"
        },
        {
            "name": "CodeName",
            "pattern": "/([~`])[^~`]*?\\1/x"
        }
    ],
    // list of words to be ignored.  unlike `words` below, these won't be
    // suggested as corrections for misspelled words.
    "ignoreWords": [
        "otel",
        "rustdoc",
        "rustfilt",
        "webkpi"
    ],
    // these are words that are always considered incorrect.
    "flagWords": [
        "recieve",
        "reciever",
        "seperate",
        "hte",
        "teh"
    ],
    "dictionaries": [
        "companies",
        "people-names",
        "rust",
        "software-tools",
        "softwareTerms"
    ],
    // these are words that are always correct and can be thought of as our
    // workspace dictionary.
    "words": [
        "logrecord",
        "periodicreader",

        //people names
        "Antonsson",
        "Bhasin",
        "Björn",
        "Cijo",
        "Dirkjan",
        "Gerring",
        "Grübel",
        "Isobel",
        "Kühle",
        "Kumar",
        "Lalit",
        "Ochtman",
        "Pillai",
        "Redelmeier",
        "Tescher",
        "Umesan",
        "Utkarsh",
        "Zhongyang",

        //rust
        "Actix",
        "DashMap",
        "grpcio",
        "protoc",
        "Prost",
        "Reqwest",
        "Rustls",
        "Thiserror",
        "webpki",

        // software terms
        "appender",
        "appenders",
        "cloneable",
        "BLRP",
        "quantiles",
        "unsampled",
        "UCUM",
        // software tools
        "Zipkin"
    ],
    "enabledLanguageIds": [
        "jsonc",
        "markdown",
        "plaintext",
        "rust",
        "shellscript"
    ],
    "languageSettings": [
        {
            "languageId": "jsonc",
            "includeRegExpList": [
                "CStyleComment"
            ]
        },
        {
            "languageId": "markdown",
            "caseSensitive": false,
            "ignoreRegExpList": [
                "CodeBlock",
                "CodeName"
            ]
        },
        {
            "languageId": "rust",
            "includeRegExpList": [
                "CStyleComment",
                "strings"
            ]
        },
        {
            "languageId": "shellscript",
            "includeRegExpList": [
                "/#.*/g"
            ]
        }
    ]
}
